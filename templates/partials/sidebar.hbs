<aside class="sidebar" role="complementary" aria-label="Liste des composants">
  <nav class="styleguide-nav" role="navigation" aria-label="Composants">
    <ul role="list">
      <li>
        <a href="{{base}}" class="js-home-link" data-home>accueil</a>
      </li>
    </ul>

    <h2 id="sidebar-components-title">Éléments HTML</h2>
    <ul role="list" aria-labelledby="sidebar-components-title">
      {{#if componentsSorted}}
        {{#each componentsSorted}}
          <li>
            <a href="{{../base}}?element={{slug}}" data-component-id="{{id}}" data-component-slug="{{slug}}">{{label}}</a>
          </li>
        {{/each}}
      {{else}}
        {{!-- Fallback: tous sauf le premier, non trié --}}
        {{#each components}}
          {{#unless @first}}
            <li>
              <a href="{{../base}}?element={{slug}}" data-component-id="{{id}}" data-component-slug="{{slug}}">{{label}}</a>
            </li>
          {{/unless}}
        {{/each}}
      {{/if}}
    </ul>
  </nav>

</aside>
